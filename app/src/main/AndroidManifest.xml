<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.getscriba.sampleapp.android.Game">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="sensorLandscape"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".Game.ChartActivity" />
        <activity android:name=".Game.AgeAndGender" /> <!-- <activity android:name=".InitialDemoActivity" /> -->
        <activity android:name=".Game.MainActivity" />
        <activity android:name=".Game.Video">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Game.PairActivity" /> <!-- android:label="@string/app_name" -->
        <!-- android:screenOrientation="landscape" /> -->
        <activity
            android:name=".Game.GameActivity"
            android:configChanges="orientation|keyboardHidden" />
        <activity
            android:name=".Game.GameOver"
            android:configChanges="orientation|keyboardHidden" />
        <activity
            android:name=".Game.GameWin"
            android:configChanges="orientation|keyboardHidden" />
        <activity
            android:name=".Game.Leaderboard"
            android:configChanges="orientation|keyboardHidden" />
        <activity
            android:name=".Game.Credit"
            android:configChanges="orientation|keyboardHidden" />
        <activity
            android:name=".Game.GameEngine"
            android:configChanges="orientation|keyboardHidden" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>