<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/leader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blurredbackground"
        android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/pressstart"
        android:text="leaderboard"
        android:textAlignment="center"
        android:textColor="#FFD700"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/pressstart"
        android:text="1st:"
        android:textColor="#AF9500"
        android:textSize="40sp" />


    <TextView
        android:id="@+id/tvPersonalBest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/pressstart"
        android:text="TextView"
        android:textColor="#AF9500"
        android:textSize="36sp" />

        <TextView
            android:id="@+id/nameOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/pressstart"
            android:textColor="#AF9500"
            android:textSize="36sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/pressstart"
        android:text="2nd:"
        android:textColor=" #D7D7D7"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/secondBest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/pressstart"
        android:text="TextView"
        android:textColor=" #D7D7D7"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/nameOutput2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/pressstart"
        android:textColor=" #D7D7D7"
        android:textSize="36sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/pressstart"
            android:text="3rd:"
            android:textColor="#6A3805"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/thirdBest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/pressstart"
            android:text="TextView"
            android:textColor="#6A3805"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/nameOutput3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/pressstart"
            android:textColor="#6A3805"
            android:textSize="36sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="back"
            android:padding="10dp"
            android:text="Back" />

        <EditText
            android:id="@+id/nameInput"
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Name "
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Submit" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="resetScores"
            android:text="reset" />
    </LinearLayout>


</LinearLayout>